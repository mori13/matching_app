<%= form_with model: @users do |f| %>
 
  <div class="field">
    <%= f.label :myself %><br />
    <%= f.file_field :myself,autofocus: true, autocomplete: "myself" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<%= link_to "ホームに戻る", root_path %>