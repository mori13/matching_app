
<%= form_for @user,url:users_profile_path do |f| %>
 
  <div class="field">
    <%= f.label :userimage %><br />
    <%= f.file_field :userimage,autofocus: true, autocomplete: "userimage" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :selfintr %><br />
    <%= f.text_area :selfintr, autofocus: true, autocomplete: "selfintr" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<%= link_to "ホームに戻る", root_path %>
